<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TruthOrDrink.DrunkTestPage"
             Title="Are you drunk?">
    <StackLayout HorizontalOptions="Center">
        <Label Text="Instructions:" Margin="0, 10, 0, 10" FontSize="25" HorizontalTextAlignment="Center"></Label>
        <Label Text="Get the phone in your hand and keep your arm horizontal and as far away from your face as possible, like when you're making a selfie." FontSize="15" Margin="0, 5, 0, 5"></Label>
        <Label Text="The goal is to keep the numbers as close to 0 as possible. If you struggle to keep them below 5 you could say you're drunk!" FontSize="15" Margin="0, 5, 0, 5"></Label>
        <Label Text="Try to keep your arm steady!!!" TextDecorations="Underline" HorizontalOptions="Center" FontSize="16" TextColor="LightBlue"></Label>
        <Label x:Name="lblTiltX" FontSize="150" HorizontalTextAlignment="Center"></Label>
        <Label x:Name="lblTiltY" FontSize="150" HorizontalTextAlignment="Center"></Label>
        <Label x:Name="lblTiltZ" FontSize="150" HorizontalTextAlignment="Center"></Label>
    </StackLayout>
</ContentPage>