<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TruthOrDrink.MainPage"
             >

    <ScrollView>
        <VerticalStackLayout>


            <Label Padding="80"></Label>
            <Entry Text="" Placeholder="Username" HorizontalOptions="Center" WidthRequest="300" x:Name="usernameEntry"></Entry>

            <Entry Text="" Placeholder="Password" IsPassword="True" HorizontalOptions="CenterAndExpand" WidthRequest="300" x:Name="passwordEntry"></Entry>
            <Button Text="Log in" WidthRequest="200" Margin="50" x:Name="logInButton"  Clicked="logInButton_Clicked"></Button>
            <Label Text="" TextColor="Red" x:Name="errorLabel" HorizontalOptions="CenterAndExpand" ></Label>
            <Label Text="" TextColor="Red" x:Name="helpLabel" HorizontalOptions="CenterAndExpand" Padding="10"></Label>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
